<style>
/* ðŸŒŒ Page confirmation sombre et moderne */
:root {
    --bg-main: #0b1220;
    --bg-card: #1a1f33;
    --accent-gradient: linear-gradient(135deg, #b91c1c, #ef4444, #fb7185);
    --text-main: #e5e7eb;
    --text-muted: #94a3b8;
    --success-color: #ef4444;
    --info-color: #fb7185;
}

/* ===== PAGE ===== */
.confirmation-page {
    background: var(--bg-main);
    min-height: 100vh;
    padding: 60px 20px;
    font-family: 'Poppins', sans-serif;
    color: var(--text-main);
    display: flex;
    justify-content: center;
    align-items: center;
}

/* ===== CONTENEUR ===== */
.confirmation-container {
    max-width: 600px;
    width: 100%;
    background: var(--bg-card);
    border-radius: 20px;
    box-shadow: 0 25px 50px rgba(0,0,0,0.6);
    padding: 40px 30px;
    text-align: center;
}

/* ===== TITRE SUCCESS ===== */
.alert-success h2 {
    font-weight: 700;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 30px;
}

/* ===== CONTENU ===== */
.card {
    background: #131b2c;
    border-radius: 15px;
    border: none;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
}

.card-body p {
    font-size: 1.1rem;
    margin-bottom: 10px;
    color: var(--text-main);
}

.card-body h4 {
    font-weight: 700;
    color: var(--success-color);
}

.alert-info {
    border-left: 5px solid var(--info-color);
    border-radius: 12px;
    font-size: 0.95rem;
    background: rgba(239,68,68,0.1);
    color: var(--text-main);
    padding: 10px 15px;
    margin-top: 15px;
}

/* ===== BOUTON ===== */
.btn-primary {
    background: var(--accent-gradient);
    border: none;
    border-radius: 50px;
    padding: 12px 28px;
    font-weight: 600;
    color: white;
    transition: all 0.3s ease;
    display: inline-block;
    margin-top: 20px;
}

.btn-primary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
}

/* ===== RESPONSIVE ===== */
@media(max-width:768px){
    .confirmation-container {
        padding: 30px 20px;
    }
}
</style>

