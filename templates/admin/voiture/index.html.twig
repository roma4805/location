{% extends 'base_admin.html.twig' %}
{% block title %}Liste des voitures{% endblock %}

{% block body %}
<style>
/* üåô Style sombre avec accent rouge */
body {
    font-family: 'Poppins', sans-serif;

    color: #e5e7eb;
}

/* Titre */
h1 {
    color: #e63946;
    margin-bottom: 30px;
    font-weight: 700;
}

/* Bouton Ajouter */
.btn-primary {
    background: linear-gradient(135deg, #e63946, #9b1c1c);
    border: none;
    border-radius: 50px;
    padding: 10px 22px;
    font-weight: 600;
    color: #fff;
    box-shadow: 0 8px 20px rgba(230,57,70,0.3);
}

.btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 12px 25px rgba(230,57,70,0.45);
}

/* Table sombre */
.table {
    background: #161a2e;
    border-radius: 14px;
    overflow: hidden;
    color: #e5e7eb;
    box-shadow: 0 15px 40px rgba(0,0,0,0.45);
}

.table thead {
    background: #1f243d;
    color: #fff;
}

.table thead th {
    border: none;
    font-weight: 600;
}

.table tbody tr {
    border-bottom: 1px solid rgba(255,255,255,0.05);
}

.table tbody tr:hover {
    background-color: rgba(230,57,70,0.08);
    transition: 0.3s ease;
}

/* Images */
.table img {
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.4);
}

/* Badges */
.badge {
    font-weight: 600;
    padding: 6px 14px;
    border-radius: 20px;
}

.bg-success {
    background-color: #2ecc71 !important;
}

.bg-warning {
    background-color: #f1c40f !important;
    color: #000;
}

.bg-danger {
    background-color: #e63946 !important;
}

/* Boutons actions */
.btn-sm {
    font-size: 0.75rem;
    padding: 5px 12px;
    border-radius: 10px;
}

.btn-info {
    background: #3a86ff;
    border: none;
    color: #fff;
}

.btn-warning {
    background: #ffbe0b;
    border: none;
    color: #000;
}

.btn-danger {
    background: #e63946;
    border: none;
}

/* Aucun r√©sultat */
.text-muted {
    color: #9ca3af !important;
}
</style>

<div class="container mt-4">
    <h1> Liste des voitures</h1>

    <a href="{{ path('admin_voiture_ajouter') }}" class="btn btn-primary mb-4">
        + Ajouter une voiture
    </a>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Marque</th>
                    <th>Mod√®le</th>
                    <th>Immatriculation</th>
                    <th>Prix journalier</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for voiture in voitures %}
                <tr>
                    <td>
                        {% if voiture.image %}
                            <img src="{{ asset('uploads/' ~ voiture.image) }}" width="100">
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                    <td>{{ voiture.marque }}</td>
                    <td>{{ voiture.modele }}</td>
                    <td>{{ voiture.immatriculation }}</td>
                    <td><strong>{{ voiture.prixJournalier }} MAD</strong></td>
                    <td>
                        {% if voiture.statut == 'Disponible' %}
                            <span class="badge bg-success">{{ voiture.statut }}</span>
                        {% elseif voiture.statut == 'Lou√©e' %}
                            <span class="badge bg-warning">{{ voiture.statut }}</span>
                        {% else %}
                            <span class="badge bg-danger">{{ voiture.statut }}</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('admin_voiture_details', {'id': voiture.id}) }}" class="btn btn-info btn-sm">D√©tails</a>
                        <a href="{{ path('admin_voiture_modifier', {'id': voiture.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('admin_voiture_supprimer', {'id': voiture.id}) }}" 
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Voulez-vous vraiment supprimer cette voiture ?');">
                           Supprimer
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        Aucune voiture trouv√©e
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
