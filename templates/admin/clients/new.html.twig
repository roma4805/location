{% extends 'base.html.twig' %}

{% block body %}
<style>
/* Page */
.client-form-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #0f172a, #1e293b);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40px;
    font-family: 'Poppins', sans-serif;
}

/* Card */
.client-form-card {
    width: 100%;
    max-width: 600px;
    background: #111827;
    border-radius: 25px;
    padding: 40px 45px;
    box-shadow: 0 25px 60px rgba(0,0,0,0.7);
    transition: 0.3s;
}

.client-form-card:hover {
    transform: translateY(-3px);
}

/* Title */
.client-form-card h1 {
    font-size: 30px;
    font-weight: 700;
    margin-bottom: 35px;
    text-align: center;
    color: #f8fafc;
}

/* Form Grid */
.form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

/* Full width fields */
.form-group-full {
    grid-column: 1 / -1;
}

/* Label */
.client-form-card label {
    font-size: 14px;
    margin-bottom: 6px;
    color: #9ca3af;
}

/* Input wrapper */
.input-box {
    position: relative;
}

/* Inputs */
.client-form-card .form-control {
    width: 100%;
    background: #0f172a;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 15px;
    padding: 14px 18px;
    color: #e5e7eb;
    font-size: 15px;
    margin-bottom: 18px;
    transition: all 0.3s;
}

.client-form-card .form-control:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59,130,246,0.3);
    color: #f8fafc;
}

/* Disabled / read-only inputs */
.client-form-card .form-control[disabled],
.client-form-card .form-control[readonly] {
    background: #1f2937;
    color: #9ca3af;
    border-color: rgba(255,255,255,0.1);
    cursor: not-allowed;
}

/* Buttons */
.btn-save {
    width: 100%;
    padding: 15px;
    border-radius: 16px;
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    border: none;
    color: #fff;
    font-size: 16px;
    font-weight: 600;
    margin-top: 20px;
    transition: 0.3s;
}

.btn-save:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 30px rgba(37,99,235,0.6);
}

.btn-back {
    display: block;
    text-align: center;
    margin-top: 18px;
    padding: 12px;
    border-radius: 14px;
    background: #374151;
    color: #e5e7eb;
    text-decoration: none;
    transition: 0.3s;
}

.btn-back:hover {
    background: #4b5563;
    color: #f8fafc;
}
</style>

<div class="client-form-page">
    <div class="client-form-card">
        <h1>{{ client is defined ? 'Modifier le client' : 'Créer un client' }}</h1>

        {{ form_start(form) }}
        <div class="form-grid">
            {% for field in form %}
                {% set is_disabled = field.vars.name not in ['firstName','lastName'] %}
                <div class="{{ is_disabled ? 'form-group-full' : '' }}">
                    {{ form_label(field) }}
                    <div class="input-box">
                        {{ form_widget(field, {
                            'attr': {
                                'class': 'form-control',
                                'readonly': is_disabled ? 'readonly' : null
                            }
                        }) }}
                    </div>
                </div>
            {% endfor %}
        </div>

        <button class="btn-save">
            {{ client is defined ? 'Mettre à jour' : 'Créer' }}
        </button>
        {{ form_end(form) }}

        <a href="{{ path('admin_clients_index') }}" class="btn-back">
            ← Retour à la liste
        </a>
    </div>
</div>
{% endblock %}
