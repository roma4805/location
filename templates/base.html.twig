</a>



        <ul class="navbar-nav ms-auto">
            {% if app.user is null %}
                <li class="nav-item"><a class="nav-link" href="{{ path('client_register') }}">Inscription</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
            {% else %}
                <li class="nav-item"><a class="nav-link" href="{{ path('client_dashboard') }}">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('client_voitures') }}">Mes voitures</a></li>
                <li class="nav-item"><a class="nav-link text-danger" href="{{ path('app_logout') }}">D√©connexion</a></li>
            {% endif %}
        </ul>
    </div>
</nav>

<!-- üîπ CONTENU -->
{% block body %}{% endblock %}

<!-- JS -->
{% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
{% endblock %}

</body>
</html>
