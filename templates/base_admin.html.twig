<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin - Location Voitures{% endblock %}</title>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚öôÔ∏è</text></svg>">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

       body {
    font-family: 'Poppins', sans-serif;
    background: #0f1220;
    color: #e5e7eb;
}


        .navbar {
            background: linear-gradient(135deg, #1f1c2c, #928dab);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 1px;
            color: #fff;
        }

        .nav-link {
            color: rgba(255,255,255,0.9) !important;
            font-weight: 500;
            margin-left: 15px;
            position: relative;
            transition: all 0.3s ease;
        }

        .nav-link::after {
            content: "";
            position: absolute;
            width: 0;
            height: 2px;
            background: #ffcc00;
            left: 0;
            bottom: -5px;
            transition: 0.3s;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        .page-wrapper {
            padding: 40px 0;
        }

        .card {
            border: none;
            border-radius: 18px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.12);
        }

        .btn-primary {
            background: linear-gradient(135deg, #ff9900, #ff6600);
            border: none;
            border-radius: 50px;
            padding: 10px 28px;
            font-weight: 600;
        }

        .table {
            border-radius: 12px;
            overflow: hidden;
        }

        .table thead {
            background: #928dab;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #e0e0e0;
            transition: 0.3s;
        }

        .footer {
            background: #1f1c2c;
            color: #aaa;
            padding: 25px 0;
            margin-top: 60px;
            text-align: center;
        }
        html, body {
    background-color: #0f1220 !important;
    min-height: 100%;
}

.container,
.container-fluid,
.page-wrapper {
    background: transparent !important;
}

    </style>
    {% endblock %}
</head>

<body>

<!-- NAVBAR ADMIN -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{{ path('admin_voitures') }}">Admin Location</a>

        <ul class="navbar-nav ms-auto align-items-center">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_voitures') }}">Voitures</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_clients_index') }}">Clients</a>
            </li>
            <!-- üîî Notification r√©servations -->
            <li class="nav-item position-relative">
                <a class="nav-link" href="{{ path('admin_clients_reservations') }}">
                    <i class="bi bi-bell"></i> R√©servations
                    {% if reservationsCount is defined and reservationsCount > 0 %}
                        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">
                            {{ reservationsCount }}
                        </span>
                    {% endif %}
                </a>
            </li>
        </ul>
    </div>
</nav>


<!-- CONTENU -->
{% block body %}{% endblock %}

<!-- JS -->
{% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
{% endblock %}

</body>
</html>
